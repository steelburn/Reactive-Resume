{
  "name": "reactive-resume",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "client:dev": "lerna run --scope @reactive-resume/client --stream dev",
    "server:dev": "lerna run --scope @reactive-resume/server --stream start:debug",
    "dev": "concurrently --kill-others 'npm run *:dev'",
    "client:build": "lerna run --scope @reactive-resume/client --stream build",
    "server:build": "lerna run --scope @reactive-resume/server --stream build",
    "build": "concurrently --kill-others 'npm run *:build'",
    "format": "prettier --write .",
    "lint": "eslint --fix ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1"
  }
}
